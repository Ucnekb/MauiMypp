<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiMypp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiMypp"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiMypp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="hom.png"
        Route="MainPage" />


    <ShellContent
    Title="HavaDurumu"
    ContentTemplate="{DataTemplate local:HavaDurumu}"
Icon="hav.png"
    Route="HavaDurumu" />

    <ShellContent
    Title="Döviz"
    ContentTemplate="{DataTemplate local:Döviz}"
        Icon="mar.png"
    Route="Döviz" />

    <ShellContent
     Title="Yapılacaklar"
     ContentTemplate="{DataTemplate local:Yapılacaklar}"
           Icon="checklist.png"
        Route="Yapılacaklar" />

    <ShellContent
     Title="Ayarlar"
     ContentTemplate="{DataTemplate local:Ayalar}"
        Icon="aya.png"
        Route="Ayarlar" />

    <ShellContent
     Title="Haberler"
     ContentTemplate="{DataTemplate local:NewsPage1}"
        Icon="hab.png"
        Route="NewsPage1" />


</Shell>
